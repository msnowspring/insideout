package webCrawling;

import java.io.IOException;

import org.jsoup.Jsoup;
import org.jsoup.nodes.Document;
import org.jsoup.select.Elements;

public class kfhi {
	public static void main(String[] args) {
		
		//크롤링 할 페이지 url 지정
		String url = "https://kfhi.or.kr/apps/support/products.asp?";
		String selector = "div.boostList>ul.gird";
        Document doc = null;
        
        try {
            doc = Jsoup.connect(url).get(); // 1. get방식의 URL에 연결해서 가져온 값을 doc에 담는다.
        } catch (IOException e) {
            System.out.println(e.getMessage());
        }
        
        //메인 요소 선택
	    Elements kfhi = doc.select(selector);
	    
	    //gfound title
	    String[] titles = kfhi.select("li.products>div.info>strong").html().split("\n");
	    for(int t=0; t<27; t++) {
	    	System.out.println(titles[t]);
	    }
	    
	  //gfound url
	  		String[] urls = kfhi.select("span.s_list_btn").html().split("\n");
	  		for(int g=0; g<urls.length; g++) {
	  			urls[g] = urls[g].substring(9, 92);
	  			System.out.println(urls[g]);
	  		}
	  		
	  		//gfound img
	  		String[] imgs = kfhi.select("div.s_list_phot>a").html().split("\n");
	  		for(int i=0; i<imgs.length; i++) {
	  			imgs[i] = imgs[i].substring(10, 135);
	  			System.out.println(imgs[i]);
	  		}
	}
}
