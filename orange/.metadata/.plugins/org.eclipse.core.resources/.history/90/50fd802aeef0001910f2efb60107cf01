package webCrawling;

import java.io.IOException;

import org.jsoup.Jsoup;
import org.jsoup.nodes.Document;
import org.jsoup.select.Elements;

public class miral {
	public static void main(String[] args) {
		for(int n=1; n<10; n++) {
			String murl = "http://www.miral.org/donate/special_list.asp?page="+n;
			String selector = "div.special_donate_list>ul";
		    Document doc = null;
		    
		    try {
		        doc = Jsoup.connect(murl).get(); // 1. get방식의 URL에 연결해서 가져온 값을 doc에 담는다.
		    } catch (IOException e) {
		        System.out.println(e.getMessage());
		    }
		    
		    //메인 요소 선택
		    Elements miral = doc.select(selector);
		    System.out.println(miral);
		    
		    //miral title
		    String[] titles = miral.select("li>div.thumbnail>div.title>strong").html().split("\n");
		    for(int t=0; t<titles.length; t++) {
		    	System.out.println(titles[t]);
		    }
		    
		    //miral url
		    miral.select("li>div.thumbnail").remove();
		    miral.select("li>div.hover_area").remove();
			String[] urls = miral.select("li").html().split("\n");
			for(int g=0; g<urls.length; g++) {
				
				System.out.println(urls[g]);
			}
		    		
			//이미지 안뽑아짐
			//miral img
//		    Elements mimg = doc.select("ul>li>a>div.thumbnail>img");
//
//		    System.out.println(mimg);
		}
	}
}
