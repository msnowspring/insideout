package webCrawling;

import java.io.IOException;

import org.jsoup.Jsoup;
import org.jsoup.nodes.Document;
import org.jsoup.select.Elements;

public class ngo {
	public static void main(String[] args) {
		for(int n=1; n<3; n++) {
			String wurl = "http://www.withgo.or.kr/campaign/story_cam.asp?strArea=B&intCate=&intStat=1&intPage="+n+"#";
			String selector = "div.camp_list>ul.clearfix";
		    Document doc = null;
		    
		    try {
		        doc = Jsoup.connect(wurl).get(); // 1. get방식의 URL에 연결해서 가져온 값을 doc에 담는다.
		    } catch (IOException e) {
		        System.out.println(e.getMessage());
		    }
		    
		    //메인 요소 선택
		    Elements withgo = doc.select(selector);
		    
		    //withgo title
		    String[] titles = withgo.select("li>a>p.tit").html().split("\n");
		    for(int t=0; t<titles.length; t++) {
		    	System.out.println(titles[t]);
		    }
		    
		    //withgo img
//		    String gimg = withgo.select("li>a>div.thum").html();
//			System.out.println(gimg);
		    
			String[] imgs = withgo.select("li>a>div.thum").html().split("\n");
			for(int i=0; i<imgs.length; i++) {
				imgs[i] = "http://www.withgo.or.kr" + imgs[i].substring(10, 60);
				int idx = imgs[i].indexOf('"');
				imgs[i] = imgs[i].substring(0,idx);
				System.out.println(imgs[i]);
			}
		    
		    
			
		}
		
		
		
	}
}
