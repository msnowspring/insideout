package webCrawling;

import java.io.IOException;

import org.jsoup.Jsoup;
import org.jsoup.nodes.Document;
import org.jsoup.select.Elements;


public class concern {
	public static void main(String[] args) {
		String courl = "https://www.concern.or.kr/load.asp?subPage=310#";
		String selector = "div.bbs_thumb_list>ul";
	    Document doc = null;
	    
	    try {
	        doc = Jsoup.connect(courl).get(); // 1. get방식의 URL에 연결해서 가져온 값을 doc에 담는다.
	    } catch (IOException e) {
	        System.out.println(e.getMessage());
	    }
	    
	    //메인 요소 선택
	    Elements concern = doc.select(selector);
	    
	    //concern title
	    String[] titles = concern.select("li>div.cont>div.tit>a>span").html().split("\n");
	    for(int t=0; t<titles.length; t++) {
	    	int idx = titles[t].indexOf(']');
	    	titles[t] = titles[t].substring(idx+2);
	    	System.out.println(titles[t]);
	    }
	    
	    //concern img
	    concern.select("li>a>div.over").remove();
		String[] imgs = concern.select("li>a").html().split("\n");
		for(int i=0; i<imgs.length; i++) {
			imgs[i] = "https://www.concern.or.kr" + imgs[i].substring(10, 63);
			System.out.println(imgs[i]);
		}
	    
	    //concern url
		concern.select("li>div.cont>div.tit>div.date").remove();
		concern.select("li>div.cont>div.tit>a>span").remove();
		String[] urls = concern.select("li>div.cont>div.tit").html().split("\n");
		for(int g=0; g<urls.length; g++) {
			if(g<2) {
				urls[g] = "https://www.concern.or.kr" + urls[g].substring(63, 180);
				System.out.println(urls[g]);
			}else {
				urls[g] = "https://www.concern.or.kr" + urls[g].substring(10, 91);
				System.out.println(urls[g]);
			}
			
		}

}
}
